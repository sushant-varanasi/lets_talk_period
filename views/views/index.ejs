<%- include("partials/header") %>
<div class="ui main text container">
    <div class="ui huge header">LetsTalkPeriod</div>
    <div class="ui top segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
				<div class="image">
					<img src="<%= blog.image%> " />
				</div>
				<div class="content">
					<a class="header" href="/blogs/<%= blog.id %>"><%= blog.title %></a>
					<div class="meta">
						<span><%= blog.created.toDateString() %> </span>
					</div>
					<div class="meta">
						<span><em>AUTHOR:<%=blog.author%></em></span>
					</div>
					<div class="extra">
						<a class="ui floated primary button" href="/blogs/<%= blog._id %>">Read More</a> <i class="right chevron icon"></i>
					</div>
				</div>
            </div>
            <% }); %>
        </div>
		<a class="ui floated primary button" href="/blogs/new">ADD BLOG</a>
		<a class="ui floated primary button" href="/">HOME</a>
    </div>
</div>
<%- include("partials/footer") %>